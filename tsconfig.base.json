{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base TypeScript Config for Weather Decision Apps",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "removeComments": true,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // Path Mapping (apps will extend with their own paths)
    "baseUrl": ".",
    "paths": {
      "@weather-apps/core-algorithm": ["./packages/core-algorithm/src"],
      "@weather-apps/weather-api": ["./packages/weather-api/src"],
      "@weather-apps/ai-services": ["./packages/ai-services/src"],
      "@weather-apps/geolocation": ["./packages/geolocation/src"],
      "@weather-apps/design-system": ["./packages/design-system/src"],
      "@weather-apps/security": ["./packages/security/src"],
      "@weather-apps/monitoring": ["./packages/monitoring/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage"
  ]
}
